{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "旅游平台",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/spots/spots",
			"style": {
				"navigationBarTitleText": "景点",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/map/map",
			"style": {
				"navigationBarTitleText": "地图"
			}
		},
		{
			"path": "pages/user/user",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/spots/detail",
			"style": {
				"navigationBarTitleText": "景点详情"
			}
		},
		{
			"path": "pages/user/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/user/register",
			"style": {
				"navigationBarTitleText": "注册"
			}
		},
		{
			"path": "pages/user/favorites",
			"style": {
				"navigationBarTitleText": "我的收藏",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/spots/search",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "旅游平台",
		"navigationBarBackgroundColor": "#2B9939",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#2B9939",
		"borderStyle": "black",
		"backgroundColor": "#FFFFFF",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/tabbar/home.png",
				"selectedIconPath": "static/tabbar/home-active.png"
			},
			{
				"pagePath": "pages/spots/spots",
				"text": "景点",
				"iconPath": "static/tabbar/spots.png",
				"selectedIconPath": "static/tabbar/spots-active.png"
			},
			{
				"pagePath": "pages/map/map",
				"text": "地图",
				"iconPath": "static/tabbar/map.png",
				"selectedIconPath": "static/tabbar/map-active.png"
			},
			{
				"pagePath": "pages/user/user",
				"text": "我的",
				"iconPath": "static/tabbar/user.png",
				"selectedIconPath": "static/tabbar/user-active.png"
			}
		]
	},
	"uniIdRouter": {},
	"preloadRule": {
		"pages/index/index": {
			"network": "all",
			"packages": ["pages/spots/spots"]
		}
	}
}

/* 常用组件样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.divider {
  height: 1rpx;
  background-color: #EEEEEE;
  margin: 20rpx 0;
}
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  border-radius: 4rpx;
}
.badge.badge-primary {
  color: #2B9939;
  background-color: rgba(43, 153, 57, 0.1);
}
.badge.badge-danger {
  color: #FF5B05;
  background-color: rgba(255, 91, 5, 0.1);
}
.badge.badge-warning {
  color: #FF9500;
  background-color: rgba(255, 149, 0, 0.1);
}

/* 按钮样式 */
.btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 0 40rpx;
}
.btn::after {
  border: none;
}
.btn.btn-primary {
  background-color: #2B9939;
  color: #fff;
}
.btn.btn-danger {
  background-color: #FF5B05;
  color: #fff;
}
.btn.btn-warning {
  background-color: #FF9500;
  color: #fff;
}
.btn.btn-outline {
  background-color: transparent;
  border: 1rpx solid #2B9939;
  color: #2B9939;
}
.btn.btn-disabled {
  background-color: #ccc;
  color: #fff;
}

/* 列表样式 */

  padding: 0 30rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #EEEEEE;
}
.form-item .form-error {
  font-size: 24rpx;
  color: #FF5B05;

/* 常用组件样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.divider {
  height: 1rpx;
  background-color: #EEEEEE;
  margin: 20rpx 0;
}
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  border-radius: 4rpx;
}
.badge.badge-primary {
  color: #2B9939;
  background-color: rgba(43, 153, 57, 0.1);
}
.badge.badge-danger {
  color: #FF5B05;
  background-color: rgba(255, 91, 5, 0.1);
}
.badge.badge-warning {
  color: #FF9500;
  background-color: rgba(255, 149, 0, 0.1);
}

/* 按钮样式 */
.btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 0 40rpx;
}
.btn::after {
  border: none;
}
.btn.btn-primary {
  background-color: #2B9939;
  color: #fff;
}
.btn.btn-danger {
  background-color: #FF5B05;
  color: #fff;
}
.btn.btn-warning {
  background-color: #FF9500;
  color: #fff;
}
.btn.btn-outline {
  background-color: transparent;
  border: 1rpx solid #2B9939;
  color: #2B9939;
}
.btn.btn-disabled {
  background-color: #ccc;
  color: #fff;
}

/* 列表样式 */
.list {
  background-color: #fff;
}
.list .list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
}
.list .list-item:last-child {
  border-bottom: none;
}
.list .list-item .item-content {
  flex: 1;
}
.list .list-item .item-extra {
  margin-left: 20rpx;
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}
.form-item .form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}
.form-item .form-input {
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
}
.form-item .form-error {
  font-size: 24rpx;
  color: #FF5B05;
  margin-top: 10rpx;
}

/* 图标字体基础样式 */
.iconfont {
  font-family: "iconfont";
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 添加文本省略 mixin */
/* 为了方便使用，也添加一个通用类 */
.text-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx;
}
.form-box {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}
.form-box .input-group {
  margin-bottom: 30rpx;
}
.form-box .input-group .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.form-box .input-group .input-box {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}
.form-box .input-group .input-box input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.form-box .input-group .input-box .iconfont {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}
.form-box .input-group .error {
  font-size: 24rpx;
  color: #ff5b05;
  margin-top: 10rpx;
}
.submit-btn {
  margin-top: 60rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #ccc;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}
.submit-btn.active {
  background-color: #2B9939;
}
.submit-btn::after {
  border: none;
}
}
.form-item .form-input {
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #EEEEEE;
}
.form-item .form-error {
  font-size: 24rpx;
  color: #FF5B05;
  margin-top: 10rpx;
}

/* 输入框通用样式 */

<view class="container"><swiper class="banner" circular autoplay interval="3000" duration="1000" indicator-dots indicator-active-color="#fff"><swiper-item wx:for="{{a}}" wx:for-item="item" wx:key="b"><image src="{{item.a}}" mode="aspectFill"></image></swiper-item></swiper><view class="info-section"><view class="title-box"><text class="name">{{b}}</text><view class="favorite" bindtap="{{d}}"><text class="{{['iconfont', c]}}"></text></view></view><view class="rating-box"><text class="score">{{e}}分</text><text class="comment-count">({{f}}点评)</text><text class="price">¥{{g}}起</text></view><view class="tag-list"><text wx:for="{{h}}" wx:for-item="tag" wx:key="b" class="tag">{{tag.a}}</text></view><view class="address-box" bindtap="{{l}}"><text class="iconfont icon-location"></text><text class="address">{{i}}</text><text wx:if="{{j}}" class="distance">{{k}}km</text><text class="iconfont icon-arrow-right"></text></view></view><view class="desc-section"><view class="section-title">景点介绍</view><text class="desc-text">{{m}}</text><view class="open-info"><view class="info-item"><text class="label">开放时间：</text><text class="value">{{n}}</text></view><view class="info-item"><text class="label">建议游玩：</text><text class="value">{{o}}</text></view></view></view><view class="comment-section"><view class="section-title"><text>游客点评</text><text class="comment-count">({{p}}条)</text></view><view class="comment-list"><view wx:for="{{q}}" wx:for-item="item" wx:key="h" class="comment-item"><view class="user-info"><image class="avatar" src="{{item.a}}" mode="aspectFill"></image><view class="right"><text class="nickname">{{item.b}}</text><view class="rating"><text class="score">{{item.c}}分</text><text class="time">{{item.d}}</text></view></view></view><text class="content">{{item.e}}</text><view wx:if="{{item.f}}" class="image-list"><image wx:for="{{item.g}}" wx:for-item="img" wx:key="a" src="{{img.b}}" mode="aspectFill" bindtap="{{img.c}}"></image></view></view></view></view><view class="bottom-bar"><button class="share-btn" open-type="share"><text class="iconfont icon-share"></text><text>分享</text></button><button class="primary-btn" bindtap="{{r}}">导航</button></view></view>
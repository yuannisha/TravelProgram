/* 常用组件样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.divider {
  height: 1rpx;
  background-color: #EEEEEE;
  margin: 20rpx 0;
}
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  border-radius: 4rpx;
}
.badge.badge-primary {
  color: #2B9939;
  background-color: rgba(43, 153, 57, 0.1);
}
.badge.badge-danger {
  color: #FF5B05;
  background-color: rgba(255, 91, 5, 0.1);
}
.badge.badge-warning {
  color: #FF9500;
  background-color: rgba(255, 149, 0, 0.1);
}

/* 按钮样式 */
.btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 0 40rpx;
}
.btn::after {
  border: none;
}
.btn.btn-primary {
  background-color: #2B9939;
  color: #fff;
}
.btn.btn-danger {
  background-color: #FF5B05;
  color: #fff;
}
.btn.btn-warning {
  background-color: #FF9500;
  color: #fff;
}
.btn.btn-outline {
  background-color: transparent;
  border: 1rpx solid #2B9939;
  color: #2B9939;
}
.btn.btn-disabled {
  background-color: #ccc;
  color: #fff;
}

/* 列表样式 */
.list {
  background-color: #fff;
}
.list .list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
}
.list .list-item:last-child {
  border-bottom: none;
}
.list .list-item .item-content {
  flex: 1;
}
.list .list-item .item-extra {
  margin-left: 20rpx;
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}
.form-item .form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}
.form-item .form-input {
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #EEEEEE;
}
.form-item .form-error {
  font-size: 24rpx;
  color: #FF5B05;
  margin-top: 10rpx;
}

/* 输入框通用样式 */
input {
  border: 1rpx solid #EEEEEE;
}
.input-box {
  border: 1rpx solid #EEEEEE;
  border-radius: 12rpx;
  overflow: hidden;
}

